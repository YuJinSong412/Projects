<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="회원가입"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="이름"/>

    <EditText
        android:id="@+id/edtName1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="송유진"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="이메일"/>

    <EditText
        android:id="@+id/edtEmail1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="songij4@gmail.com"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="비밀번호"/>

    <EditText
        android:id="@+id/edtPassword1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="6자리 이상"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="이벤트 및 마케팅 정보 수신에 동의합니다."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="본인은 만 14세 이상이며, 이용약관, 개인정보 수집 및 이용 내용을 확인하였으며, 동의합니다."
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:textSize="10dp"/>

    <Button
        android:id="@+id/soso1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EAA121"
        android:text="실험"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/btnAgreeGo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:background="#EAA121"
        android:text="동의하고 가입하기"/>

</LinearLayout>